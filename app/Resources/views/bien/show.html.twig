{% block body %}
    <ul>
    <h1>Bien</h1>
       
    <table class="mini-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bien.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ bien.codigo }}</td>
            </tr>
