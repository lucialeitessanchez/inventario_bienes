{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bien</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bien.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ bien.codigo }}</td>
            </tr>
            <tr>
                <th>Fechaalta</th>
                <td>{% if bien.fechaAlta %}{{ bien.fechaAlta|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ bien.descripcion }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ bien.estado }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bien_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bien_edit', { 'id': bien.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
