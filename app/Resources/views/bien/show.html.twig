{% extends 'base_new.html.twig' %}

{% block body %}

	<h1>Bien</h1>

	<div class="table-responsive">
		<table class="table-sm table-striped mb-3">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ bien.id }}</td>
				</tr>
				<tr>
					<th>Codigo</th>
					<td>{{ bien.codigo }}</td>
				</tr>
				<tr>
					<th>Fecha de alta</th>
					<td>
						{% if bien.fechaAlta %}
							{{ bien.fechaAlta|date('d-m-Y') }}
						{% endif %}
					</td>
				</tr>
				<tr>
					<th>Descripcion</th>
					<td>{{ bien.descripcion }}</td>
				</tr>
				<tr>
					<th>Estado</th>
					<td>{{ bien.estado }}</td>
				</tr>
				<tr>
					<th>Persona que cargo</th>
					<td> {{ bien.usuario.username|default('Informatica/Jimena') }}</td>
				</tr>
				<tr>
					<th>Tipo de bien</th>
					{% if bien.tipo.idClasificacion == "BI" %}
					<td>{{ bien.tipo }} {{ bien.rama }} - Bien informatico </td>
					{% else %}
					<td>{{ bien.tipo }} {{ bien.rama }}- Bien de uso </td>
				{% endif %}
				</tr>
					<tr>
					<th>Ubicaci√≥n</th>
					<td>{{ bien.ubicacion }}</td>
				</tr>
				
			</tbody>
		</table>
	</div>


	<div class="btn-group mb-3" role="group" aria-label="Basic outlined example">

		<a href="{{ path('bien_index') }}" class="btn btn-sm btn-outline-primary">
			Volver al listado de bienes
		</a>
		{% if bien.estado == "Baja" %}
		<a href="{{ path('bien_edit', { 'id': bien.id }) }}" class="btn btn-sm  btn-outline-primary disabled" >editar</a>
		{% else %}
		<a href="{{ path('bien_edit', { 'id': bien.id }) }}" class="btn btn-sm btn-outline-primary">
			Editar
		</a>
		{% endif %}
	
</div>{% endblock %}
