{% block formBlock %}
    {{ form_start(form) }}
    
    {% for campo, obj in form %}
     
        {% if loop.last %}
        {% elseif campo == "password" %}
         {% for label, pass in obj %}
           <div class="form-row">
            <div class="form-group col-md-4">
            
              {{ form_label(pass) }}
              {{ form_widget(pass, {'attr': {'class': 'form-control form-control-sm '}}) }}
              <small id="form-error" class="text-danger">
               {{ form_errors(pass) }}
              </small>
            </div>
          </div>  
          
           {% endfor %}
            {% elseif campo == "fechaBaja"%}
           {{ form_widget(form.fechaBaja, { 'attr': {'style': 'display:none'} }) }}
        {% elseif campo == "consumible" %}
        {{ form_row(form.consumible) }}
       {% elseif campo == "motivoBaja"%}
           {{ form_widget(form.motivoBaja, { 'attr': {'style': 'display:none'} }) }} {# si esta estiando o dando de alta tiene que estar oculto este campo#}
        {% else %}
          <div class="form-row">
            <div class="form-group col-md-4">
              
              {{ form_label(obj) }}
              {{ form_widget(obj, {'attr': {'class': 'form-control form-control-sm'}}) }}
              <small id="form-error" class="text-danger">
               {{ form_errors(obj) }}
              </small>
            </div>
          </div>  
        {% endif %}

      
      
    {% endfor %}

  

    <input class="btn btn-outline-primary mb-2 btn-sm" type="submit" value="{{btnTxt|default('Cargar')}}" />
  {{ form_end(form) }}


{% endblock %}

