{% block tableFactura %}

	<div class="table-responsive borderRad dataTable gg" id="full_table" style="max-height: 62vh">

		<table class="table bg-light table-sm table-striped table-bordered table-hover text-center text-dark">
			<thead class="table-tr-bg" style="position: sticky; top: 0; z-index: 1">
				<tr>
					<th>
						Id
					</th>
					<th>
						Numero de factura
					</th>
					<th>
						Fecha
					</th>
					<th>
						Monto unitario
					</th>
					<th>
						Monto total:
					</th>
					<th>
						Descripcion
					</th>
					<th>
						Tipo de adquisicion
					</th>
					<th>
						Acciones
					</th>
				</tr>
			</thead>
			<tbody>
				{% for factura in facturas %}
					<tr>
						<td>
							<a href="{{ path( 'factura_show', { id: factura.id } ) }}">
								{{ factura.id }}
							</a>
						</td>
						<td>
							{{ factura.numeroFactura }}
						</td>
						<td>
							{% if factura.fecha %}
								{{
                  factura.fecha|date('Y-m-d')
                }}
							{% endif %}
						</td>
						<td>
							{{ factura.montoUnitario }}
						</td>
						<td>
							{{ factura.montoTotal }}
						</td>
						<td>
							{{ factura.descripcion }}
						</td>
						<td>
							{{ factura.tipoAdquisicion }}
						</td>
						<td>
							<ul>
								<div class="btn-group" role="group" aria-label="Basic outlined example">
									<a href="{{ path( 'factura_show', { id: factura.id } ) }}" class="btn btn-sm btn-outline-primary">
										ver
									</a>

									<a href="{{ path( 'factura_edit', { id: factura.id } ) }}" class="btn btn-sm btn-outline-primary">
										editar
									</a>
								</div>
							</ul>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
