{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tipo</h1>
    <h2>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipo.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ tipo.tipo }}</td>
            </tr>
