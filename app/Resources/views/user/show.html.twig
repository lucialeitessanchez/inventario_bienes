{% extends 'base_new.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if user.isActive %}Si{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

      
  <div class="btn-group" role="group" aria-label="Basic outlined example">
  <a href="{{ path('user_edit', { 'id': user.id }) }}" type="button" class="btn btn-outline-primary">Editar</a>
  <a href="{{ path('user_index') }}" type="button" class="btn btn-outline-primary">Volver</a>

{% endblock %}
